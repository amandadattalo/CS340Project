<!-- Header -->
<h1>Books</h1>


{{!-- Create a table --}}
<table>

    {{!-- Header section --}}
    <thead>

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr>
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{#each data}}
        <tr>
            <td>{{this.Title}}</td>
            <td>{{this.Author}}</td>
            <td>{{this.InSeries}}</td>
            <td>{{this.Series}}</td>
            <td>{{this.Genre}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>

