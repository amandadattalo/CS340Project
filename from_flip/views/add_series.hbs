<!-- Header -->
<h1>Add Series</h1>

<!-- Form for adding a series -->
<form id="add_series">
    <fieldset>
        <legend>Add a Series</legend>

        <label for="title">Title:</label>
        <input type="text" name="title" id="title">
        <!-- <br> -->

        <label for="author">Author(s):</label>
        <select multiple name="author" id="author">
            {{#each authors}}
                <option value="{{this.author_id}}">{{this.first_name}} {{this.last_name}}</option>
            {{/each}}
        </select>

        <br>

        <label for="genre">Genre:</label>
        <select name="genre" id="genre">
            {{#each genres}}
                <option value="{{this.genre_id}}">{{this.name}}</option>
            {{/each}}
        </select>
        <br>

        <label for="numOfBooks">Number of Books in Series:</label>
        <input type="number" name="numOfBooks" id="numOfBooks" min="1" max="100">
        <br>

        <p>** If genre was not found, please create it first.</p>

        <input type="submit" id="blue_button" value="Add a Series">    
        <button id="blue_button" onclick="window.history.go(-1); return false;">Cancel</button> 
    </fieldset>
</form>

<script src="js/add_series.js"></script>
