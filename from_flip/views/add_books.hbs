<!-- Header -->
<h1>Add Book</h1>

<!-- Form for adding a book -->
<form id="add_books">
    <fieldset>
    <legend>Add a Book</legend>

    <label for="title">Title:</label>
    <input type="text" name="title" id="title">
    <br>

    <label for="author">Author(s):</label>

    <select multiple name="author" id="author">
        {{#each authors}}
        <option value="{{this.author_id}}">{{this.first_name}} {{this.last_name}}</option>
        {{/each}}
    </select>
    <br>

    <label for="in_series">Part of a series?</label>
    <select name="in_series" id="in_series">
        <option value="0">No</option>
        <option value="1">Yes</option>
    </select>
    <br>

    <label for="series">Series</label>
    <select name="series" id="series">
        <option value = ''>Not part of a series</option>
        {{#each series}}
        <option value="{{this.series_id}}">{{this.title}}</option>
        {{/each}}
    </select>
    <br>

    <label for="genre">Genre</label>
    <select name="genre" id="genre">
        {{#each genres}}
        <option value="{{this.genre_id}}">{{this.name}}</option>
        {{/each}}
    </select>
    <br>

    <p>** If author, series or genre was not found, please create them first.</p>

    <input type="submit" id="blue_button" value="Add a Book">   
    <button id="blue_button" onclick="window.history.go(-1); return false;">Cancel</button> 
    </fieldset>
</form> 

<script src="js/add_book.js"></script>
