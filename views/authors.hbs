<!-- Header -->
<h1>Authors</h1>

<!-- Table -->
{{!-- Create a table --}}
<table id="authors_table">
    {{!-- Header section --}}
    <thead>
        <tr>
        {{#each data.[0]}}
            {{#unless @first}}
                <th>{{@key}}</th>
            {{/unless}}
        {{/each}}
        <th>Edit</th>
        <th>Delete</th>
    </tr>
    </thead>
    {{!-- Body section --}}
    <tbody>
        {{#each data}}
        <tr data_value = {{this.author_id}}>
            <td>{{this.First_Name}}</td>
            <td>{{this.Last_Name}}</td>
            <td>{{this.Books}}</td>
            <td><button id="edit" onclick="location.href='/edit_authors?author_id={{this.author_id}}'">Edit</button></td>
            <td><button id='delete', onclick="deleteAuthor({{this.author_id}})">Delete</button>
        </tr>
        {{/each}}
    </tbody>
</table>

{{!-- Connect to delete js file --}}
<script src="js/delete_author.js"></script>

